body{
    font-family: Arial;
    font-size: 12px;

}

canvas{
    float:left;
    border: 1px solid #000;
    margin-right: 10px;
}


.loading{
    position:absolute;
    width: 500px;
    height: 469px;
    background-color: #ccc;
    opacity:0.50;
    -moz-opacity: 0.50;
    filter: alpha(opacity=50);

}

.loading .image{
    width: 500px;
    height: 500px;
    background: url("../img/loading2.gif") no-repeat 200px 200px transparent;
}

ul{
    list-style:none;
}


.square {
    border: 1px solid #FF0000;
    position: absolute;
}


.zoomBox{
    background-color: #000;
    opacity:0.30;
    -moz-opacity: 0.30;
    filter: alpha(opacity=30);
    display:none;
    position:absolute;
}
